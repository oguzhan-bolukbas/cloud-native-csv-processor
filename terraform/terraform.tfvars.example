# Example Terraform variables file
# Copy this file to "terraform.tfvars" and change the values if required

# AWS Region
region = ""

# EKS Cluster Configuration
cluster_name    = ""
cluster_version = ""

# Environment
environment = ""

# Node Group Configuration
node_group_desired_size = 2
node_group_min_size     = 1
node_group_max_size     = 3

# Instance Configuration
instance_types = ["t3.micro"]
capacity_type  = "SPOT"

# S3 Configuration
s3_bucket_name = ""

# IRSA Configuration
enable_irsa = true

# Tags
tags = {
  Project     = ""
  Environment = ""
  ManagedBy   = ""
}
